<section class="reviews">
    <h2 class="title">
        Rese√±as del producto
    </h2>
    <div class="list-of-reviews">
        <% reviews.forEach(review => { %>                
            <div class="card-review">
                <header>
                    <div class="review-image">
                        <img src="<%=review.img%>" alt="profile-picture">
                     </div>
                 
                    <div class="name-date-stars">
                        <p class="user-name"><%=review.name%></p>
                        <p class="date-of-review"><%=review.date%></p>
                        <div class="stars-review-one-user">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                        </div>
                    </div>
                </header>    
                    <p class="user-review-text">
                        <%=review.text%>
                    </p>
            </div>
        <% }) %>
    </div>    
</section>
